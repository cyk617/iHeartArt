<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.iheartart.app" >

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".mainpage"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".Calendar"
            android:label="@string/title_activity_calendar" >
        </activity>
        <activity
            android:name=".Events"
            android:label="@string/title_activity_events" >
            <intent-filter>
                <action android:name="com.example.iheartart.app.EVENTS" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity
            android:name=".HowTo"
            android:label="@string/title_activity_how_to" >
        </activity>
        <activity
            android:name=".Event"
            android:label="@string/title_activity_event" >
        </activity>
        <activity
            android:name=".listOfEvents"
            android:label="@string/title_activity_list_of_events" >
        </activity>
        <activity
            android:name=".FooterEvents"
            android:label="@string/title_activity_footer_events" >
        </activity>
        <activity
            android:name=".Reviews"
            android:label="@string/title_activity_reviews" >
        </activity>
        <activity
            android:name=".listOfReviews"
            android:label="@string/title_activity_list_of_reviews" >
        </activity>
        <activity
            android:name=".FooterReviews"
            android:label="@string/title_activity_footer_reviews" >
        </activity>
    </application>

</manifest>
